<!DOCTYPE composition PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:a="http://richfaces.org/a4j"
	xmlns:rich="http://richfaces.org/rich"
	template="/WEB-INF/facelets/layout/template.xhtml">

	<ui:define name="body">
		<a:form id="olvidoContraseniaForm-email" prependId="false">

			<rich:panel id="resultados">
				<f:facet name="header">
					<h:panelGrid columns="2" width="100%">
						<h:outputText value="#{msg['jsp.login.olvidoContrasenia']}" />
					</h:panelGrid>
				</f:facet>
				<h:panelGroup styleClass="franjazul-2Col" layout="block">

					<h:panelGrid id="email" columns="2" columnClasses="name,value">
						<h:outputLabel for="Email" value="#{msg['jsp.usuario.email']}: "
							styleClass="requerido" style="width: 150px;" />
						<h:inputText id="Email" value="#{ingresoBean.email}"
							maxlength="100" size="50" required="true" />

						<h:panelGroup styleClass="MT10" layout="block">
							<h:outputLabel value="#{msg['jsp.lbl.camposRequeridos']}"
								styleClass="requeridos" />
						</h:panelGroup>
						<h:panelGroup />

					</h:panelGrid>
					<h:panelGroup style="actionButtons" layout="block">
						<a:commandButton id="validarEmail"
							value="#{msg['jsp.btn.validar']}"
							action="#{ingresoBean.validarEmail}" />
						<a:commandButton id="volverLogin"
							value="#{msg['jsp.btn.cancelar']}"
							action="#{ingresoBean.volverLogin}" immediate="true" />
					</h:panelGroup>
				</h:panelGroup>

			</rich:panel>

		</a:form>
	</ui:define>
</ui:composition>