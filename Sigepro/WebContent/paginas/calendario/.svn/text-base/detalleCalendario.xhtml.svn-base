<!DOCTYPE composition PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:a="http://richfaces.org/a4j"
	xmlns:rich="http://richfaces.org/rich"
	template="/WEB-INF/facelets/layout/plantilla-principal.xhtml">

	<ui:define name="body">
		<a:form id="calendarioForm">
			<rich:panel id="panelCalendario">
				<f:facet name="header">
					<h:panelGrid columns="2" width="100%">
						<h:outputText value="#{msg['jsp.calendario.detalleCalendario']}" />
					</h:panelGrid>

				</f:facet>

				<h:panelGrid columns="2" styleClass="franjazul-2Col"
					columnClasses="name,detalle">
					<h:outputLabel for="nombre" value="#{msg['jsp.lbl.nombre']}:" />
					<h:outputText id="nombre"
						value="#{calendarioBean.calendario.nombre}" />

					<h:outputLabel for="descripcion"
						value="#{msg['jsp.lbl.descripcion']}:" />
					<h:outputText id="descripcion"
						value="#{calendarioBean.calendario.descripcion}" />
						
					<h:outputLabel for="horarTrabajo"
						value="#{msg['jsp.lbl.horasTrabajo']}:" />
					<h:outputText id="horarTrabajo"
						value="#{calendarioBean.calendario.horasTrabajo}" />
						
					<h:outputLabel for="diasTrabajo"
						value="#{msg['jsp.lbl.diasTrabajo']}:" />
					<h:panelGroup id="diasTrabajo" styleClass="radio">
				<h:selectBooleanCheckbox id="domingo"
					value="#{calendarioBean.calendario.diasTrabajo[0]}" >					
				</h:selectBooleanCheckbox>
				
				<h:outputLabel for="domingo" value="#{msg['jsp.lbl.domingo']}" />
				<!--  -->
				<h:selectBooleanCheckbox id="lunes"
					value="#{calendarioBean.calendario.diasTrabajo[1]}" disabled="true">					
				</h:selectBooleanCheckbox>
				<h:outputLabel for="lunes" value="#{msg['jsp.lbl.lunes']}" />

				<h:selectBooleanCheckbox id="martes"
					value="#{calendarioBean.calendario.diasTrabajo[2]}" disabled="true">					
				</h:selectBooleanCheckbox>
				<h:outputLabel for="martes" value="#{msg['jsp.lbl.martes']}" />

				<h:selectBooleanCheckbox id="miercoles"
					value="#{calendarioBean.calendario.diasTrabajo[3]}" disabled="true">					
				</h:selectBooleanCheckbox>
				<h:outputLabel for="miercoles" value="#{msg['jsp.lbl.miercoles']}" />

				<h:selectBooleanCheckbox id="jueves"
					value="#{calendarioBean.calendario.diasTrabajo[4]}" disabled="true">					
				</h:selectBooleanCheckbox>
				<h:outputLabel for="jueves" value="#{msg['jsp.lbl.jueves']}" />

				<h:selectBooleanCheckbox id="viernes"
					value="#{calendarioBean.calendario.diasTrabajo[5]}" disabled="true">					
				</h:selectBooleanCheckbox>
				<h:outputLabel for="viernes" value="#{msg['jsp.lbl.viernes']}" />

				<h:selectBooleanCheckbox id="sabado"
					value="#{calendarioBean.calendario.diasTrabajo[6]}" disabled="true">					
				</h:selectBooleanCheckbox>
				<h:outputLabel for="sabado" value="#{msg['jsp.lbl.sabado']}" />
			</h:panelGroup>			
				</h:panelGrid>
			</rich:panel>

			<ui:include src="festivosCalendarioConsulta.xhtml" />
			
			<h:panelGroup styleClass="actionButtons" layout="block">
				<a:commandButton id="editar" value="#{msg['jsp.btn.editar']}"
					action="#{calendarioBean.editarInicializar}" />
				<a:commandButton id="aceptar" value="#{msg['jsp.btn.aceptar']}"
					action="#{calendarioBean.verAceptar}" />
			</h:panelGroup>

		</a:form>
	</ui:define>
</ui:composition>
