<!DOCTYPE composition PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:a="http://richfaces.org/a4j"
	xmlns:rich="http://richfaces.org/rich"
	template="/WEB-INF/facelets/layout/plantilla-principal.xhtml">

	<ui:define name="body">
		<a:form id="indicadoresForm">
			<rich:panel id="panelIndicadores">
				<f:facet name="header">
					<h:panelGrid columns="2" width="100%">
						<h:outputText value="#{msg['jsp.indicadores.indicadores']}" />
					</h:panelGrid>
				</f:facet>
				<h:panelGrid columns="2" styleClass="franjazul-2Col"
					columnClasses="name,detalle">
					<h:outputLabel for="horasEstimadas"
						value="#{msg['jsp.indicadores.horasEstimadas']}:" />
					<h:outputText id="horasEstimadas"
						value="#{indicadoresBean.horasEstimadas}" size="50"
						maxlength="100" />

					<h:outputLabel for="horasEjecutadas"
						value="#{msg['jsp.indicadores.horasEjecutadas']}:" />
					<h:outputText id="horasEjecutadas"
						value="#{indicadoresBean.horasEjecutadas}" size="50"
						maxlength="100" />
					<h:outputLabel for="estadoProyecto"
						value="#{msg['jsp.indicadores.estadoProyecto']}:" />
					<h:outputText id="estadoProyecto"
						value="#{indicadoresBean.estadoProyecto}" size="50"
						maxlength="100" />	
					<h:outputLabel for="reportes"
						value="#{msg['jsp.indicarores.reportes']}:" />
					<h:panelGroup>
						<h:selectOneMenu
							value="#{indicadoresBean.listadoReportes.idSeleccionado}">
							<f:selectItems value="#{indicadoresBean.listadoReportes.lista}"></f:selectItems>
						</h:selectOneMenu>
						<h:commandButton action="#{indicadoresBean.generarReporte}"
							image="/tema/imagen/download.jpg">
						</h:commandButton>
					</h:panelGroup>

				</h:panelGrid>
			</rich:panel>
		</a:form>
	</ui:define>
</ui:composition>
